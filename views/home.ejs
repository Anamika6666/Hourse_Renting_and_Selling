<% layout('./Layouts/boilerplate.ejs') -%>
    <h1>All Listings</h1>
    <div class="row row-cols-lg-3 row-cols-md-2 row-cols-sm-1">
        <% for(list of result){ %>
            <a href="/listings/<%= list.id %>" class="click-link">
                <div class="card col">
                    <img src="<%=list.image.url%>" class="card-img-top" alt="Image not working" style="height: 20rem;">
                    <div class="card-body">
                        <b class="card-title">
                            <%= list.title %>
                        </b>
                        <p>
                            <span>&#8377;<%= list.price.toLocaleString('en-IN') %></span>
                        </p>
                    </div>
                </div>
            </a>
            <% } %>
    </div>