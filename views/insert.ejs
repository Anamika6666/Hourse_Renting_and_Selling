<% layout('./Layouts/boilerplate.ejs') %>
    <div class="row">
        <div class="col-8 offset-2"><br>
            <h1>Add New List</h1>
            <form method="post" action="/listings" novalidate class="needs-validation">
                <div class="mb-3">
                    <label for="exampleInputEmail1" class="form-label">Title :</label>
                    <input type="text" class="form-control" id="exampleInputEmail1" aria-describedby="emailHelp"
                        name="list[title]" placeholder="Enter Title" required>
                        <div class="valid-feedback">Looks Good!</div>
                        <div class="invalid-feedback">Please insert title</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Description :</label>
                    <textarea class="form-control" id="" name="list[description]" placeholder="Enter Description" required>
                    </textarea>
                    <div class="invalid-feedback">Please insert description</div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Image :</label>
                    <input type="file" class="form-control" id="exampleInputPassword1" name="list[image]"
                        placeholder="Enter Image/URL" required accept=".jpg ,.png ,.jpeg" >
                        <div class="invalid-feedback">Please insert Image</div>
                </div>
                <div class="row">
                    <div class="mb-3 col-md-4">
                        <label for="exampleInputPassword1" class="form-label">Price :</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="list[price]"
                            placeholder="Enter the Price" required>
                            <div class="invalid-feedback">Please Enter Price</div>
                    </div>
                    <div class="mb-3 col-md-8">
                        <label for="exampleInputPassword1" class="form-label">Country :</label>
                        <input type="text" class="form-control" id="exampleInputPassword1" name="list[country]"
                            placeholder="Enter the country" required>
                            <div class="invalid-feedback">Please Enter Countery</div>
                    </div>
                </div>
                <div class="mb-3">
                    <label for="exampleInputPassword1" class="form-label">Location :</label>
                    <input type="text" class="form-control" id="exampleInputPassword1" name="list[location]"
                        placeholder="Enter the Location" required>
                        <div class="invalid-feedback">Please Enter Location</div>
                </div>
                <button type="submit" class="btn btn-primary">Add</button>
            </form><br><br>
        </div>
    </div>